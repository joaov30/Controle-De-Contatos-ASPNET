@{
    ViewData["Title"] = "Editar  Contatos";
}

<div class="text-center">
    <h1 class="display-4">Editar  Contatos</h1>
</div>


<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o Nome do contato">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="Digite o Email do contato">
    </div>

    <div class="mb-3">
        <label for="celular" class="form-label">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o Celular do contato">
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Alterar</button>
    <a class="btn btn-secondary btn-lg" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>